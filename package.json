{
  "name": "jbeam-editor",
  "displayName": "Jbeam editor",
  "description": "Editing utilities for jbeam",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],  
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jbeam-editor.show3DScene",
        "title": "Show 3D Scene",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == jbeam",
          "command": "jbeam-editor.show3DScene",
          "group": "navigation",
          "icon": "$(open-preview)"
        }
      ]
    },
    "grammars": [{
      "language": "jbeam",
      "scopeName": "source.jbeam",
      "path": "./syntaxes/jbeam.tmLanguage.json"
    }],
    "languages": [{
      "id": "jbeam",
      "aliases": ["JBeam", "jbeam"],
      "extensions": [".jbeam"],
      "configuration": "./language-configuration.json"
    }],
    "documentSymbolProvider": true,
    "iconThemes": [
      {
        "id": "beamng-icons",
        "label": "BeamNG Icon Theme",
        "path": "./icons/beamng-icon-theme.json"
      }
    ]
  },
  "webview": {
    "scripts": [
      "https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"
    ]
  },
  "viewsContainers": {
    "activitybar": [
      {
        "id": "3d-scene",
        "title": "3D Scene",
        "icon": "media/icon/path.svg"
      }
    ]
  },
  "views": {
    "2d-scenes": [
      {
        "id": "sceneView",
        "name": "Scene View",
        "when": "view == sceneView"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.83.2",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  },
  "files": [
    "src/webview/*"
  ]
}
